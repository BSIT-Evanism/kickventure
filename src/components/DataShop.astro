---
const res = await fetch(
    "https://psc2023.azurewebsites.net/api/collections/Products/records",
);
const data = await res.json();
console.log(data);
---

<div class="grid grid-cols-3 gap-10">
    {
        data.items.map((item, i) => (
            <div class="group shadow-xl hover:shadow-2xl hover:-translate-y-4 card w-full bg-base-100 image-full transition-all duration-300 overflow-hidden">
                <figure>
                    <img
                        transition:name={item.id}
                        class="group-hover:scale-125 transition-all duration-300"
                        src={`https://psc2023.azurewebsites.net/api/files/Products/${item.id}/${item.picture}`}
                        alt={i}
                    />
                </figure>
                <div class="w-auto h-auto card-body">
                    <h1
                        class="card-title text-4xl"
                        transition:name={item.product_name}
                    >
                        {item.product_name}
                    </h1>
                    <p>{item.price} pesos</p>
                    <p>{item.stocks}</p>
                    <div class="card-actions translate-x-80 group-hover:translate-x-0 justify-end transition-all duration-300 ease">
                        <a
                            href={`/shop/${item.id}`}
                            class="bg-lime-200 px-4 py-8 font-bold uppercase text-black rounded-3xl"
                            data-astro-prefetch
                        >
                            Check Details
                        </a>
                    </div>
                </div>
            </div>
        ))
    }
</div>
